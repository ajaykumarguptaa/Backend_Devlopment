<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheet/style.css" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>dataBase</title>
  </head>
  <body>
    <div
      class="w-full h-screen bg-zinc-900 flex-col flex justify-center items-center text-white"
    >
      <form
        action="/create"
        method="post"
        class="bg-zinc-800 p-8 rounded-lg shadow-lg w-full max-w-md"
      >
        <h2 class="text-2xl font-bold mb-6 text-center">Register</h2>

        <!-- Name Field -->
        <div class="mb-4">
          <label for="name" class="block mb-1">Name</label>
          <input
            type="text"
            name="name"
            id="name"
            placeholder="Enter your name"
            class="w-full px-4 py-2 rounded bg-zinc-700 text-white outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>

        <!-- Username Field -->
        <div class="mb-4">
          <label for="username" class="block mb-1">Username</label>
          <input
            type="text"
            name="username"
            id="username"
            placeholder="Create username"
            class="w-full px-4 py-2 rounded bg-zinc-700 text-white outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>

        <!-- Email Field -->
        <div class="mb-4">
          <label for="email" class="block mb-1">Email</label>
          <input
            type="email"
            name="email"
            id="email"
            placeholder="Enter your email"
            class="w-full px-4 py-2 rounded bg-zinc-700 text-white outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>

        <!-- password -->
        <div class="mb-4">
          <label for="password" class="block mb-1">Password</label>
          <input
            type="password"
            name="password"
            id="password"
            placeholder="Enter your password"
            class="w-full px-4 py-2 rounded bg-zinc-700 text-white outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>

        <div class="mb-4">
          <label for="image" class="block mb-1">Image Url</label>
          <input
            type="text"
            name="image"
            id="image"
            placeholder="Enter your Image"
            class="w-full px-4 py-2 rounded bg-zinc-700 text-white outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>
        <!-- Submit Button -->
        <button
          type="submit"
          class="w-full py-2 mt-4 bg-blue-600 hover:bg-blue-700 rounded font-semibold"
        >
          Submit
        </button>
      </form>
      <button
        class="w-32 py-2 mt-4 bg-blue-600 hover:bg-blue-700 rounded font-semibold"
      >
        <a href="read"> View User</a>
      </button>
    </div>
  </body>
</html>
