<!-- views/rename.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.tailwindcss.com"></script>
  <title>Rename File</title>
</head>
<body class="bg-zinc-900 text-white min-h-screen flex items-center justify-center px-4">
  <div class="bg-zinc-800 p-8 rounded-xl shadow-xl w-full max-w-lg">
    <h2 class="text-3xl font-bold text-blue-400 mb-6 text-center">Rename File</h2>

    <form action="/rename" method="POST" class="space-y-6">
      <!-- Hidden Old Name -->
      <input type="hidden" name="oldname" value="<%= oldname %>">

      <!-- Show Old Name -->
      <div>
        <label class="block text-sm mb-1 text-gray-300">Current File Name</label>
        <input
          type="text"
          value="<%= oldname %>"
          disabled
          class="w-full bg-zinc-700 text-white px-4 py-2 rounded-md border border-zinc-600"
        />
      </div>

      <!-- New Name Input -->
      <div>
        <label class="block text-sm mb-1 text-gray-300">New File Name (with .txt)</label>
        <input
          type="text"
          name="newname"
          placeholder="e.g. updatedTask.txt"
          required
          class="w-full bg-zinc-700 text-white px-4 py-2 rounded-md border border-zinc-600"
        />
      </div>

      <!-- Submit Button -->
      <button
        type="submit"
        class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-md"
      >
        Rename
      </button>
    </form>

    <div class="text-center mt-4">
      <a href="/" class="text-sm text-gray-400 hover:text-blue-400">‚Üê Back to Home</a>
    </div>
  </div>
</body>
</html>
