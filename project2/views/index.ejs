<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.tailwindcss.com"></script>
  <title>Task Manager</title>
</head>
<body class="bg-zinc-900 text-white">

  <!-- Form Section -->
  <div class="max-w-3xl mx-auto py-10">
    <div class="bg-zinc-800 rounded-2xl p-8 shadow-xl">
      <h2 class="text-3xl font-bold text-center text-blue-500 mb-8">ğŸ“ Create Task</h2>

      <form action="/submit-create" method="POST" class="space-y-6">
        <textarea
          name="title"
          placeholder="Enter Task Title"
          rows="1"
          required
          class="w-full px-4 py-2 bg-zinc-700 border border-zinc-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 resize-none"
        ></textarea>

        <textarea
          name="details"
          placeholder="Type your full task in detail..."
          rows="4"
          required
          class="w-full px-4 py-2 bg-zinc-700 border border-zinc-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 resize-none"
        ></textarea>

        <button
          type="submit"
          class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg transition duration-300"
        >
          â• Submit
        </button>
      </form>
    </div>
  </div>

  <!-- Tasks Section -->
  <div class="max-w-6xl mx-auto px-6 mt-10">
    <h2 class="text-2xl font-bold text-white mb-4">ğŸ“‚ Your Tasks</h2>
    <div class="grid md:grid-cols-3 sm:grid-cols-2 gap-6">
      <% if (file.length > 0) { %>
        <% file.forEach((item) => { %>
          <div class="bg-zinc-800 rounded-lg p-5 shadow-md relative hover:shadow-xl transition-all duration-300">
            <h3 class="text-lg font-semibold break-words text-white"><%= item %></h3>

            <div class="mt-4 space-x-3">
              <a href="/files/<%= item %>" class="text-blue-400  text-sm">ğŸ“„ Read</a>
              <a href="/rename/<%= item %>" class="text-yellow-400  text-sm">âœï¸ Rename</a>
              <a
                href="/delete/<%= item %>"
                onclick="return confirm('Are you sure you want to delete <%= item %>?')"
                class="text-red-500  text-sm"
              >ğŸ—‘ Delete</a>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <p class="text-zinc-400">No tasks yet. Create one above!</p>
      <% } %>
    </div>
  </div>

</body>
</html>
